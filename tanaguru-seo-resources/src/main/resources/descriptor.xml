<assembly xmlns="http://maven.apache.org/plugins/maven-resources-plugin/resources/1.1.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-resources-plugin/resources/1.1.0 http://maven.apache.org/xsd/resources-1.1.0.xsd">
    <formats>
        <format>tar.gz</format>
    </formats>
    <dependencySets>
        <dependencySet>
            <outputDirectory>/lib</outputDirectory>
            <unpack>false</unpack>
            <scope>runtime</scope>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <directory>${basedir}/src/main/resources/bin</directory>
            <includes>
                <include>*.sh</include>
            </includes>
            <fileMode>755</fileMode>
            <outputDirectory>/bin</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/resources/conf/context</directory>
            <includes>
                <include>**/*</include>
            </includes>
            <fileMode>666</fileMode>
            <outputDirectory>/conf/context</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/resources/sql</directory>
            <includes>
                <include>**/*</include>
            </includes>
            <fileMode>666</fileMode>
            <outputDirectory>/sql</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/../seo-resources/src/main/resources/sql</directory>
            <includes>
                <include>**/*</include>
            </includes>
            <fileMode>666</fileMode>
            <outputDirectory>/sql</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/../seo/target</directory>
            <includes>
                <include>*.jar</include>
            </includes>
            <fileMode>666</fileMode>
            <outputDirectory>/lib/</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/../seo-i18n/target</directory>
            <includes>
                <include>*.jar</include>
            </includes>
            <fileMode>666</fileMode>
            <outputDirectory>/lib/</outputDirectory>
        </fileSet>
    </fileSets>
</assembly>